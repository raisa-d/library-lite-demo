<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Welcome To Your Library!</h1>
    <form action="/add" method="POST">
        <label>Title
            <input 
                placeholder="The Stranger" 
                type="text"
                name="title"
                required >
        </label>
        <label>Author
            <input 
                placeholder="Albert Camus" 
                type="text"
                name="author"
                required >
        </label>
        <button type="submit">Add Book</button>
    </form>
    <!-- Want To Read List -->
    <h2>Want To Read</h2>
    <ul>
        <% for(const book of bookList) { 
            if(book.read === false) { %>
                <li>
                    <%= book.title %> by <%= book.author %>
                    <input type="button" class="delete" value="DELETE"></input>
                    <input type="button" class="mark-read" value="MARK READ"></input>
                </li>
            <% }
        } %>
    </ul>
    <!-- Read List -->
    <h2>Read</h2>
    <ul>
        <% for(const book of bookList) { 
            if(book.read === true) { %>
                <li>
                    <%= book.title %> by <%= book.author %>
                    <input type="button" class="delete" value="DELETE"></input>
                    <input type="button" class="mark-unread" value="MARK UNREAD"></input>
                </li>
            <% }
        } %>
    </ul>
    <!-- link to main.js file -->
    <script src="/main.js"></script>
</body>
</html>